<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a10ers.lpd_mobeng10.InventoryMenu"
    android:background="@drawable/lpd10_bcground"
    android:backgroundTint="#9FFFFFFF"
    android:backgroundTintMode="src_over"
    >

    <TextView
        android:id="@+id/tvInvenoryMenu"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_goneMarginRight="10dp"
        />

    <Button
        android:id="@+id/bInventoryAll"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvInvenoryMenu"
        app:layout_constraintLeft_toLeftOf="@+id/tvInvenoryMenu"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimary"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/bInventoryReserved"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/bInventoryAll"
        app:layout_constraintTop_toBottomOf="@+id/bInventoryAll"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimary"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/bBacktoUserMain"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="@string/back"
        app:layout_constraintLeft_toLeftOf="@+id/bInventoryReserved"
        app:layout_constraintTop_toBottomOf="@+id/bInventoryReserved"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimaryDark"
        android:layout_marginTop="10dp"
        />


</android.support.constraint.ConstraintLayout>
