<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a10ers.lpd_mobeng10.InventoryMenu">

    <TextView
        android:id="@+id/tvInvenoryMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="20dp"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="parent"
        />

    <Button
        android:id="@+id/bInventoryAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvInvenoryMenu"
        app:layout_constraintLeft_toLeftOf="@id/tvInvenoryMenu"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/bInventoryAvailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="79dp"
        app:layout_constraintLeft_toLeftOf="@id/bInventoryAll"
        app:layout_constraintTop_toBottomOf="@id/bInventoryAll"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimaryDark"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/bInventoryReserved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="153dp"
        app:layout_constraintLeft_toLeftOf="@id/bInventoryAvailable"
        app:layout_constraintTop_toBottomOf="@id/bInventoryAvailable"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/bBacktoUserMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="221dp"
        app:layout_constraintLeft_toLeftOf="@id/bInventoryReserved"
        app:layout_constraintTop_toBottomOf="@id/bInventoryReserved"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimaryDark"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />


</android.support.constraint.ConstraintLayout>
