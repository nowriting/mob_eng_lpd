<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a10ers.lpd_mobeng10.UserMain">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="8sp"
        android:hint="@string/placeholder"
        android:textSize="24sp"
        android:textAlignment="center"
        android:typeface="sans"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="36dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="@id/LinearLayout01"
        app:layout_constraintBottom_toTopOf="@id/LinearLayout01"
        />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <Button
            android:id="@+id/bSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/settings"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            style="?android:attr/buttonBarStyle">

        </Button>

        <Button
            android:id="@+id/bInventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="@string/inventory"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            style="?android:attr/buttonBarButtonStyle">

        </Button>
    </LinearLayout>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/username"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="135dp"
        app:layout_constraintTop_toBottomOf="@id/LinearLayout01"
        app:layout_constraintLeft_toLeftOf="@id/tvWelcome"
        style="?android:attr/buttonBarButtonStyle"/>

</android.support.constraint.ConstraintLayout>
