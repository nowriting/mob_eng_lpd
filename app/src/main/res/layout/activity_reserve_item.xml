<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lpd10_bcground"
    android:backgroundTint="#8FFFFFFF"
    android:backgroundTintMode="src_over"

    tools:context="a10ers.lpd_mobeng10.ReserveItem">

    <EditText
        android:id="@+id/etitemID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="number"
        android:hint="@string/itemID"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/etitemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="textPersonName"
        android:hint="@string/itemName"
        app:layout_constraintTop_toBottomOf="@+id/etitemID"
        app:layout_constraintLeft_toLeftOf="@+id/etitemID"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/etitemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="number"
        android:hint="@string/itemAmount"
        app:layout_constraintLeft_toLeftOf="@+id/etitemName"
        app:layout_constraintTop_toBottomOf="@+id/etitemName"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/etitemPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:inputType="textPersonName"
        android:hint="@string/itemPlace"
        app:layout_constraintLeft_toLeftOf="@+id/etitemAmount"
        app:layout_constraintTop_toBottomOf="@+id/etitemAmount"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tvRegEditPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RegEditAdvice"
        android:textAllCaps="true"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="@+id/etitemPlace"
        app:layout_constraintTop_toBottomOf="@+id/etitemPlace"
        android:layout_marginTop="10dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/bSaveItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save"
        app:layout_constraintLeft_toLeftOf="@+id/tvRegEditPrompt"
        app:layout_constraintTop_toBottomOf="@+id/tvRegEditPrompt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimary"
        />

    <Button
        android:id="@+id/bEditItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reserve"
        app:layout_constraintLeft_toLeftOf="@+id/bSaveItem"
        app:layout_constraintTop_toBottomOf="@+id/bSaveItem"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimaryDark"
        />

    <Button
        android:id="@+id/bBacktoInventoryMenu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back"
        app:layout_constraintLeft_toLeftOf="@+id/bEditItem"
        app:layout_constraintTop_toBottomOf="@+id/bEditItem"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimary"
        />

</android.support.constraint.ConstraintLayout>
